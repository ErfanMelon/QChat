<div class="content">
    <partial name="_LoginPartial" model="@TempData["Login"]??default!">
        <partial name="_RegisterPartial" model="@TempData["Register"]??default!"/>
</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
            var pageMode = location.href.split("#")[1];
            var pageMode2 = location.href.split("/")[3];
            console.log(pageMode);
            if (pageMode) {
                if (pageMode.toLowerCase() == "register") {
                    $("#login").slideUp();
                    $("#register").fadeIn();
                } else {
                    $("#register").slideUp();
                    $("#login").slideDown();
                }
            }
            if (pageMode2) {
                if (pageMode2.toLowerCase() == "register") {
                    $("#login").slideUp();
                    $("#register").fadeIn();
                } else {
                    $("#register").slideUp();
                    $("#login").slideDown();
                }
            }
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}