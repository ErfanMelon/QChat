@model CreateUserCommand

<div id="register" class="auth" style="display: none;">
    <form asp-action="Register" asp-controller="Account" method="post">
        <h1 class="text-center">ثبت نام</h1>
        <div asp-validation-summary="ModelOnly"></div>
        <br />
        <label>نام کاربری : </label>
        <input type="text" class="form-control" asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
        <br />
        <label class="mt-3">کلمه عبور : </label>
        <input type="password" class="form-control" asp-for="PassWord" />
        <span asp-validation-for="PassWord"></span>
        <br />
        <label class="mt-3">تکرار کلمه عبور : </label>
        <input type="password" class="form-control" asp-for="RePassWord" />
        <span asp-validation-for="RePassWord"></span>
        <br />
        <button type="submit" class="btn btn-success mt-4 float-end" style="margin-right: 8px;">ثبت نام</button>
        <button type="button" id="login-btn" class="btn btn-primary mt-4 ">ورود به حساب</button>
    </form>
</div>